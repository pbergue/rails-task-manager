<div class="margin-left">
  <h1> <%= @task.title %> </h1>
  <p> <%= @task.details %> </p>
  <br>
  <p><%= @task.completed ? "✔️ Task is done!" : "❌ Task is not completed" %></p>
  <br>
  <%= link_to "Edit", edit_task_path(@task) %>
  <br>
  <%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" } %>

  <br><br><br>
  <%= link_to tasks_path do %>
      <i class="fas fa-chevron-circle-left"></i> Back to all tasks
  <% end %>
</div>
